<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="">
		<!-- 各属性的配置 下面是数据库的基本连接信息，对一个应用来说，设置一个session-factory节点就够了，除非我们中间使用了多个数据库 
			用户名 -->

		<!-- 京南数据库配置 -->
		<!--url信息 -->
		<property name="connection.url">jdbc:mysql://210.14.159.231:3306/appcloud_performance?zeroDateTimeBehavior=convertToNull</property>
		<!--密码 -->
		<property name="connection.username">appcloud3.5</property>
		<property name="connection.password">appcloud3.5</property>


		<!--数据库驱动信息 -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!--数据库方言信息 -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<!-- 在控制台打印生成的SQL语句 -->
		<property name="hibernate.show_sql">true</property>
		<!-- 对控制台输出SQL语句进行格式化，为了方便阅读 -->
		<property name="hibernate.format_sql">true</property>
		<!-- 在控制台输出便于调试的控制信息 -->
		<property name="use_sql_comments">true</property>
		<!-- 可以自动根据类生成DDL 建表语言，完成自动建表 -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		
		<property name="hibernate.c3p0.maxPoolSize">50</property>
		<property name="hibernate.c3p0.minPoolSize">20</property>
		<!-- 当连接池里面的连接用完的时候，C3P0一下获取的新的连接数 -->
		<property name="hibernate.c3p0.acquireIncrement">5</property>
		<!-- 最大的PreparedStatement的数量 -->
        <property name="hibernate.c3p0.max_statements">100</property>
        <!-- 每隔120秒检查连接池里的空闲连接 ，单位是秒-->
        <property name="hibernate.c3p0.idle_test_period">120</property>
		<!--定义在从数据库获取新连接失败后重复尝试的次数。Default: 30 -->
		<property name="hibernate.c3p0.acquireRetryAttempts">30</property>
		
		
		<!-- 获得连接的超时时间,如果超过这个时间,会抛出异常，单位毫秒 -->
		<property name="hibernate.c3p0.checkoutTimeout">200000</property>
		<!-- 每次都验证连接是否可用 -->
		<property name="hibernate.c3p0.validate">true</property>


		<!-- 指定一个Transaction实例工厂类 -->
		<property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
		<mapping class="com.appcloud.vm.action.dbentity.CloudPlatform" />
		<mapping resource="CloudPlatform.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.VMInstance" />
		<mapping resource="VMInstance.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.VMhardware" />
		<mapping resource="VMhardware.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.Dblog" />
		<mapping class="com.appcloud.vm.action.dbentity.CpuTestResult" />
		<mapping resource="CpuTestResult.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.FileIoTestResult" />
		<mapping resource="FileIoTestResult.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.MemoryTestResult" />
		<mapping resource="MemoryTestResult.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.OltpTestResult" />
		<mapping resource="OltpTestResult.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.CpuTestResultWeek" />
		<mapping resource="CpuTestResultWeek.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.FileIoTestResultWeek" />
		<mapping resource="FileIoTestResultWeek.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.MemoryTestResultWeek" />
		<mapping resource="MemoryTestResultWeek.hbm.xml" />
		<mapping class="com.appcloud.vm.action.dbentity.OltpTestResultWeek" />
		<mapping resource="OltpTestResultWeek.hbm.xml" />
	</session-factory>
</hibernate-configuration>

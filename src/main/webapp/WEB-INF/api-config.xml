	<context:component-scan base-package="com.free4lab.ipcServer" use-default-filters="false">
		<context:include-filter type="regex" expression="com.free4lab.ipcServer.ConfigController"/>
		<context:include-filter type="regex" expression="com.free4lab.ipcServer.PushLogController"/>
	</context:component-scan>-->

	<mvc:interceptors>  
        <mvc:interceptor>  
           <mvc:mapping path="/**" />
